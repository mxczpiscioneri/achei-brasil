<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.mxczpiscioneri.acheibrasil.SorteioActivity"
    tools:showIn="@layout/activity_sorteio">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPageSorteio"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/foto1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/foto2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                style="@style/detalhes_grupo"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/nome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDefault"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/premio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDefault"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/inicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/colorDefault"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/termino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/colorDefault"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ganhador1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ganhador2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ganhador3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ganhador4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ganhador5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ganhador6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ganhador7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ganhador8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ganhador9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ganhador10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/inscrever"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="32dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/participar"
                    android:textColor="@color/colorWhite"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>